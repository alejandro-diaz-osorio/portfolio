---
import { Image } from "astro:assets";
import { projects } from "../data/projects";
---

<section
  id="projects"
  class="py-8 sm:py-12 bg-gradient-to-b to-[#0f2027] from-[#2c5364] flex flex-col items-center justify-center px-4 sm:px-6 lg:px-8"
>
  <div class="max-w-5xl mx-auto text-center">
    <h2
      class="mb-6 sm:mb-8 text-2xl sm:text-3xl lg:text-4xl font-bold text-white bg-gradient-to-r from-blue-900 via-blue-500 to-blue-900 rounded-lg p-3 sm:p-4 inline-block shadow-xl"
    >
      PROYECTOS REALIZADOS
    </h2>
    <div class="grid gap-4 sm:gap-6 lg:gap-8 grid-cols-1 sm:grid-cols-2 lg:grid-cols-3">
      {
        projects.map((project) => (
          <a
            href={project.link}
            target="_blank"
            rel="noopener noreferrer"
            class="group bg-gradient-to-t from-blue-800 via-cyan-400 to-blue-700 p-4 sm:p-6 rounded-lg text-left hover:scale-105 hover:to-blue-800 hover:via-blue-400 hover:from-blue-700 transition-all duration-300"
          >
            <div class="rounded-md mb-3 sm:mb-4 border-3 border-blue-950">
              <Image
                src={project.image}
                alt={project.title}
                class="object-cover aspect-video group-hover:scale-110 transition-all duration-300"
              />
            </div>
            <h3 class="text-base sm:text-lg text-center font-bold text-gray-700 group-hover:text-gray-900 group-hover:underline transition-all duration-300 mb-2">
              {project.title}
            </h3>
            <span class="text-white text-shadow-sm text-shadow-gray-600 text-sm sm:text-base">
              {project.description}
            </span>
          </a>
        ))
      }
    </div>
  </div>
</section>
