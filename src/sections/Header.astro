---
const siteTitle = "Portfolio ADO";
const navLinks = [
  { name: "Inicio", href: "/" },
  { name: "Proyectos", href: "#projects" },
  { name: "Educaci√≥n", href: "#education" },
  { name: "Skills", href: "#skills" },
  { name: "Sobre mi", href: "#about" },
];
---

<header class="py-4 px-4 sm:px-6 lg:px-8">
  <div
    class="max-w-5xl mx-auto flex items-center justify-between flex-col sm:flex-row gap-4 sm:gap-0"
  >
    <h1
      class="text-2xl sm:text-3xl lg:text-4xl font-bold tracking-wider bg-gradient-to-r from-[#43cea2] to-[#185a9d] bg-clip-text text-transparent text-center sm:text-left"
    >
      {siteTitle}
    </h1>
    <nav class="w-full sm:w-auto">
      <ul class="flex flex-wrap justify-center sm:justify-end gap-2 sm:gap-4 lg:gap-8 list-none">
        {
          navLinks.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-white font-medium text-sm sm:text-base transition-colors duration-200 hover:underline hover:text-[#43cea2] px-2 py-1 rounded hover:bg-white/10"
              >
                {link.name}
              </a>
            </li>
          ))
        }
      </ul>
    </nav>
  </div>
</header>
