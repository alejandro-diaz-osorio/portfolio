---
import { education } from "../data/education.js"
---

<section
  id="education"
  class="py-8 sm:py-12 bg-gradient-to-b from-[#0f2027] to-[#2c5364] px-4 sm:px-6 lg:px-8"
>
  <div class="max-w-5xl mx-auto text-center">
    <h2
      class="mb-6 sm:mb-8 text-2xl sm:text-3xl lg:text-4xl font-bold text-white bg-gradient-to-r from-purple-700 via-fuchsia-600 to-indigo-700 rounded-lg p-3 sm:p-4 inline-block shadow-lg"
    >
      Educaci√≥n
    </h2>
    <ul class="space-y-4 sm:space-y-6 lg:space-y-8">
      {
        education.map((edu) => (
          <li class="bg-gradient-to-r from-purple-800 via-fuchsia-800 to-indigo-800 p-4 sm:p-6 rounded-lg text-left shadow-lg hover:scale-105 transition-all hover:from-fuchsia-700 hover:via-purple-700 hover:to-indigo-700">
            <a
              href={edu.link}
              target="_blank"
              rel="noopener noreferrer"
            >
              <h3 class="text-lg sm:text-xl font-semibold text-fuchsia-300 mb-2">
                {edu.degree}
              </h3>
              <p class="text-indigo-100 text-sm sm:text-base mb-1">
                {edu.school}
              </p>
              <span class="text-xs sm:text-sm text-purple-200 block mb-2">
                {edu.period}
              </span>
              <p class="mt-2 text-purple-100 text-sm sm:text-base">
                {edu.description}
              </p>
            </a>
          </li>
        ))
      }
    </ul>
  </div>
</section>
