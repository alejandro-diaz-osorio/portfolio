---
const skills = [
    { name: "JavaScript", level: "Advanced" },
    { name: "TypeScript", level: "Intermediate" },
    { name: "Astro", level: "Intermediate" },
    { name: "React", level: "Advanced" },
    { name: "Tailwind CSS", level: "Advanced" },
    { name: "Node.js", level: "Intermediate" },
];
---

<section class="py-12 bg-gray-50">
    <div class="max-w-4xl mx-auto px-4">
        <h2 class="text-3xl font-bold mb-6 text-gray-800">Skills</h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
            {skills.map(skill => (
                <div class="bg-white rounded-lg shadow p-6 flex flex-col items-center">
                    <span class="text-xl font-semibold text-gray-700">{skill.name}</span>
                    <span class="mt-2 text-sm text-gray-500">{skill.level}</span>
                </div>
            ))}
        </div>
    </div>
</section>