---
const currentYear = new Date().getFullYear();
import { Icon } from "astro-icon/components";
---

<footer class="bg-gray-900 text-gray-200 py-8">
  <div
    class="container mx-auto px-4 flex flex-col md:flex-row items-center justify-between"
  >
    <div class="mb-4 md:mb-0">
      <span class="font-bold text-lg">Alejandro Díaz Osorio</span>
      <span class="ml-2 text-sm text-gray-400"
        >© {currentYear} All rights reserved.</span
      >
    </div>
    <div class="flex space-x-4">
      <a
        href="https://github.com/alejandro-diaz-osorio"
        class="hover:text-white transition-colors"
        aria-label="GitHub"
      >
        <Icon name="mdi:github" class="w-7 h-7" />
      </a>
      <a
        href="mailto:youremail@example.com"
        class="hover:text-white transition-colors"
        aria-label="Email"
      >
        <Icon name="mdi:email" class="w-7 h-7" />
      </a>
      <a
        href="https://linkedin.com/in/yourusername"
        class="hover:text-white transition-colors"
        aria-label="LinkedIn"
      >
        <Icon name="mdi:linkedin" class="w-7 h-7" />
      </a>
    </div>
  </div>
</footer>
