---
import { education } from "../data/education.js";
---

<section class="py-12 bg-dark-purple">
  <div class="max-w-5xl mx-auto px-4 text-center">
    <h2
      class="mb-4 text-4xl font-bold text-gray-100 bg-orchid-purple rounded-lg p-4 inline-block shadow-lg"
    >
      Educaci√≥n
    </h2>
    <ul class="space-y-8">
      {
        education.map((edu) => (
          <li class="bg-misty-purple p-6 rounded-lg text-left shadow hover:scale-105 transition-all">
            <h3 class="text-xl font-semibold text-gray-900">{edu.degree}</h3>
            <p class="text-gray-700">{edu.school}</p>
            <span class="text-sm text-gray-600">{edu.period}</span>
            <p class="mt-2 text-gray-600">{edu.description}</p>
          </li>
        ))
      }
    </ul>
  </div>
</section>
