---
import { Image } from "astro:assets";
import { projects } from "../data/projects";
---

<section
  class="py-12 bg-gradient-to-b to-[#0f2027] from-[#2c5364] flex flex-col items-center justify-center"
>
  <div class="max-w-5xl mx-auto px-4 text-center">
    <h2
      class="mb-4 text-4xl font-bold text-white bg-gradient-to-r from-blue-900 via-blue-500 to-blue-900 rounded-lg p-4 inline-block shadow-xl"
    >
      PROYECTOS REALIZADOS
    </h2>
    <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
      {
        projects.map((project) => (
          <a
            href={project.link}
            target="_blank"
            rel="noopener noreferrer"
            class="group bg-gradient-to-t from-blue-800 via-blue-400 to-blue-700 p-6 rounded-lg text-left hover:scale-108  hover:to-blue-800 hover:via-blue-400 hover:from-blue-700 transition-all"
          >
            <div class="overflow-hidden rounded-md mb-4 border-3 border-gray-500">
              <Image
                src={project.image}
                alt={project.title}
                class="object-cover aspect-video group-hover:scale-110 transition-all"
              />
            </div>
            <h3 class="text-lg text-center font-bold text-gray-700 group-hover:text-gray-900 group-hover:underline transition-all">
              {project.title}
            </h3>
            <span class="text-white text-shadow-sm text-shadow-gray-600">
              {project.description}
            </span>
          </a>
        ))
      }
    </div>
  </div>
</section>
