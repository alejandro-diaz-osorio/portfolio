<section class="bg-gray-100 py-16 px-4" id="contact">
  <div class="max-w-xl mx-auto text-center">
    <h2 class="text-3xl font-bold mb-4 text-gray-800">Contact Me</h2>
    <p class="mb-8 text-gray-600">
      Have a question or want to work together? Fill out the form below and I'll
      get back to you soon!
    </p>
    <form class="space-y-6">
      <div>
        <label class="block text-left text-gray-700 mb-1" for="name">Name</label
        >
        <input
          class="w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-400"
          type="text"
          id="name"
          name="name"
          required
        />
      </div>
      <div>
        <label class="block text-left text-gray-700 mb-1" for="email"
          >Email</label
        >
        <input
          class="w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-400"
          type="email"
          id="email"
          name="email"
          required
        />
      </div>
      <div>
        <label class="block text-left text-gray-700 mb-1" for="message"
          >Message</label
        >
        <textarea
          class="w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-400"
          id="message"
          name="message"
          rows="5"
          required></textarea>
      </div>
      <button
        type="submit"
        class="w-full bg-blue-600 text-white py-2 rounded hover:bg-blue-700 transition"
        >Send Message</button
      >
    </form>
  </div>
</section>
